<div class="table container-xl">
    <div class="table-header">
        <div class="table-cell">ID</div>
        <div class="table-cell">Tên</div>
        <div class="table-cell">E-Mail</div>
        <div class="table-cell">Chỉnh sửa</div>
    </div>
    {{#each user}}
    <div class="table-row">
        <div class="table-cell">{{id}}</div>
        <div class="table-cell">{{name}}</div>
        <div class="table-cell">{{email}}</div>
        <div class="table-cell action-buttons">
            <a href="/user/update/{{id}}" class="edit-button">Sửa</a>
            <a href="/user/delete/{{id}}" class="delete-button">Xóa</a>
            
        </div>
    </div>
    {{/each}}
</div>