    <script>
       function playAudio(audioUrl) {
            // Đặt URL của audio
            document.getElementById('audioSource').src = audioUrl;

            // Nạp lại audio
            var audioPlayer = document.getElementById('audioPlayer');
            audioPlayer.load();

            // Hiển thị thẻ div
            document.getElementById('audioContainer').style.display = 'block';

            // Tự động phát audio khi thẻ div hiển thị
            audioPlayer.play();
        }
        function endAudio(audioUrl) {
            var audioPlayer = document.getElementById('audioPlayer')
            audioPlayer.pause()
             document.getElementById('audioContainer').style.display = 'none';
        }

        let scrollcon = document.querySelector(".anh")
        let b = document.getElementById('backk')
        let n = document.getElementById('next')

        b.addEventListener('click', () => {
            scrollcon.style.scrollBehavior = "smooth"
            scrollcon.scrollLeft -= 1080; // Adjust the scroll distance as needed
        });

        n.addEventListener('click', () => {
            scrollcon.style.scrollBehavior = "smooth"
            scrollcon.scrollLeft += 1080; // Adjust the scroll distance as needed
        });
        document.addEventListener('DOMContentLoaded', function () {
            let scrollAmount = 0;
            const scrollStep = 1080; // Amount to scroll each step
            const scrollInterval = 10000; // Interval in milliseconds between each scroll step

            function autoScroll() {
                if (scrollAmount >= scrollcon.scrollWidth - scrollcon.clientWidth) {
                    scrollAmount = 0;
                    scrollcon.style.scrollBehavior = "smooth"
                    scrollcon.scrollLeft = scrollAmount // Reset scroll amount when reaching the end
                } else {
                    scrollAmount += scrollStep;
                    scrollcon.style.scrollBehavior = "smooth"
                    scrollcon.scrollLeft = scrollAmount;
                }
            }

                setInterval(autoScroll, scrollInterval);
            })
    
</script>

